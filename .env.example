# Oracle850B Environment Configuration
# Copy to .env and fill in your values

# Hugging Face Hub
HUGGINGFACE_TOKEN=hf_***
HF_REPO=MagistrTheOne/oracle850b-moe
HF_TIER=free
HF_HUB_ENABLE_HF_TRANSFER=0

# Training Configuration
ALLOW_LOCAL_TRAIN=false
CUDA_VISIBLE_DEVICES=all
NCCL_DEBUG=INFO
NCCL_IB_DISABLE=1

# Yandex Cloud (for infrastructure)
YC_TOKEN=your-yandex-cloud-token
YC_CLOUD_ID=your-cloud-id
YC_FOLDER_ID=your-folder-id
YC_REGION=ru-central1
YC_ZONE=ru-central1-a

# AWS S3 (for data storage)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_DEFAULT_REGION=ru-central1
S3_BUCKET=oracle850b-data

# Training Parameters
MODEL_NAME=oracle850b-moe
TOTAL_PARAMS=850000000000
MOE_EXPERTS=64
MOE_TOP_K=2
MAX_SEQ_LEN=8192
VOCAB_SIZE=65536

# Infrastructure
BUDGET_LIMIT_RUB=100000
GPU_NODE_COUNT=8
GPU_TYPE=gpu-standard-v3
NODE_MEMORY_GB=64
NODE_CORES=8
STORAGE_SIZE_GB=100

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
ADMIN_EMAIL=admin@example.com

# Security
ENABLE_RBAC=true
SERVICE_ACCOUNT_NAME=oracle850b
