# Oracle850B Pro Environment Configuration
# Copy to .env and configure for your environment

# Hugging Face Hub Configuration
HF_TIER=pro
HF_HUB_ENABLE_HF_TRANSFER=1
HF_TOKEN=your_hf_token_here

# Model Configuration
MODEL_NAME=MagistrTheOne/oracle850b-moe
MODEL_REVISION=main

# Training Configuration
TRAINING_DATA_PATH=data/clean
CHECKPOINT_PATH=checkpoints/oracle850b
S3_CHECKPOINT_MIRROR=s3://oracle-checkpoints/mirror

# Infrastructure Configuration
TERRAFORM_STATE_BUCKET=oracle-terraform-state
KUBECONFIG_PATH=~/.kube/config
ARGOCD_SERVER=argocd.oracle.local

# Monitoring Configuration
PROMETHEUS_ENDPOINT=http://prometheus.oracle.local:9090
GRAFANA_ENDPOINT=http://grafana.oracle.local:3000

# Security Configuration
ENCRYPTION_KEY=your_encryption_key_here
BACKUP_RETENTION_DAYS=30

# Development Configuration
DEBUG=false
LOG_LEVEL=INFO
ENABLE_PROFILING=false